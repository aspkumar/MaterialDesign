<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView
        android:layout_margin="20dp"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:id="@+id/image_one"
        android:src="@drawable/ic_1"
        />
    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:id="@+id/image_tick_one"
        android:src="@drawable/ic_tick"
        android:visibility="invisible"
        android:layout_alignTop="@+id/image_one"
        android:layout_alignLeft="@+id/image_one"
        android:layout_alignStart="@+id/image_one" />
    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/line_one"
        android:layout_toRightOf="@+id/image_one" />
    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:id="@+id/image_two"
        android:layout_alignTop="@+id/image_one"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_2"/>
    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:id="@+id/image_tick_two"
        android:layout_alignTop="@+id/image_one"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_tick"
        android:visibility="gone"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginBottom="10dp"
        android:id="@+id/line_two"
        android:layout_alignTop="@+id/line_one"
        android:layout_toRightOf="@+id/image_two" />
    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:id="@+id/image_three"
        android:src="@drawable/ic_3"
        android:layout_marginRight="17dp"
        android:layout_marginEnd="17dp"
        android:layout_alignTop="@+id/image_two"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
